{
  "name": "@cfxdevkit/wallet-connect",
  "version": "1.0.9",
  "description": "Wagmi + SIWE wallet connection layer for Conflux applications â€” framework-agnostic, usable in any project",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "dev": "tsup --watch",
    "test": "vitest run --pass-with-no-tests",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage --pass-with-no-tests",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "@cfxdevkit/core": "workspace:*",
    "lucide-react": "^0.395.0",
    "siwe": "^2.3.2"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "connectkit": ">=1.8.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "viem": ">=2.0.0",
    "wagmi": ">=2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@testing-library/react": "^14.1.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "conflux",
    "react",
    "headless",
    "components",
    "ui",
    "tailwind",
    "blockchain",
    "web3"
  ],
  "author": "Conflux DevKit Team",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.11.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfxdevkit/devkit.git",
    "directory": "packages/wallet-connect"
  },
  "homepage": "https://github.com/cfxdevkit/devkit#readme",
  "bugs": {
    "url": "https://github.com/cfxdevkit/devkit/issues"
  }
}
