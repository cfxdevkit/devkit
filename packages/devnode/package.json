{
  "name": "@cfxdevkit/devnode",
  "version": "1.0.1",
  "description": "Optional @xcfx/node plugin for Conflux DevKit - Local development features (dev-only)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run --pass-with-no-tests",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage --pass-with-no-tests",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "@xcfx/node": "0.8.0",
    "cive": "^0.8.1",
    "viem": "^2.43.3"
  },
  "peerDependencies": {
    "@cfxdevkit/core": "^0.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@cfxdevkit/core": "workspace:*",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "conflux",
    "blockchain",
    "devkit",
    "plugin",
    "local",
    "development",
    "xcfx",
    "node",
    "dev-only"
  ],
  "author": "Conflux DevKit Team",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.11.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfxdevkit/conflux-devkit.git",
    "directory": "packages/plugin-devnode"
  },
  "homepage": "https://github.com/cfxdevkit/conflux-devkit#readme",
  "bugs": {
    "url": "https://github.com/cfxdevkit/conflux-devkit/issues"
  }
}
