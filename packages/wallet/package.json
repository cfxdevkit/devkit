{
  "name": "@cfxdevkit/wallet",
  "version": "1.0.11",
  "description": "Advanced wallet abstractions for Conflux - session keys, transaction batching, and embedded wallets",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./session-keys": {
      "types": "./dist/session-keys/index.d.ts",
      "import": "./dist/session-keys/index.js",
      "require": "./dist/session-keys/index.cjs"
    },
    "./batching": {
      "types": "./dist/batching/index.d.ts",
      "import": "./dist/batching/index.js",
      "require": "./dist/batching/index.cjs"
    },
    "./embedded": {
      "types": "./dist/embedded/index.d.ts",
      "import": "./dist/embedded/index.js",
      "require": "./dist/embedded/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "test": "vitest run --pass-with-no-tests",
    "test:ui": "vitest --ui",
    "test:run": "vitest --run",
    "test:coverage": "vitest --run --coverage --pass-with-no-tests",
    "test:watch": "vitest --watch",
    "clean": "rm -rf dist",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "@cfxdevkit/core": "workspace:*",
    "viem": "^2.43.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "tsx": "^4.21.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "conflux",
    "blockchain",
    "wallet",
    "session-keys",
    "transaction-batching",
    "embedded-wallet",
    "custody",
    "evm",
    "web3"
  ],
  "author": "Conflux DevKit Team",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.11.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfxdevkit/devkit.git",
    "directory": "packages/wallet"
  },
  "homepage": "https://github.com/cfxdevkit/devkit#readme",
  "bugs": {
    "url": "https://github.com/cfxdevkit/devkit/issues"
  }
}
